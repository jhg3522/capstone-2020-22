<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="10"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#1C64CC"
        android:text="NavigatAR"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@null"
        android:gravity="center"
        android:src="@drawable/navigatar"
        android:layout_marginBottom="50dp"
        android:layout_weight="0"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextInputEditText_code"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginBottom="30dp"
            android:hint="Access Code" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_background"
        android:layout_marginBottom="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_weight="0">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@null"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/navigatar" />

        <TextView
            android:layout_width="235dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Login"
            android:textColor="#ffffff" />
    </LinearLayout>

    <CheckBox
        android:layout_gravity="center"
        android:text="자동 로그인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout_login"
        android:layout_centerHorizontal="true"
        android:id="@+id/CheckBox_auto_login"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="1">
    </LinearLayout>
</LinearLayout>